<h1><%- title %></h1>
<%- messages() %>

  <form name="updatedAccountPermissions" id="accountUpdatePermissions" action="/account/account-permissions" method="post">

      <fieldset id="registrationBox">
       <legend id="registerLegend">Change Account Permissions: </legend>
       <p>This will allow you to change the permissions of the account entered.</p>
           <label>Enter Account Email: <input type="email" name="account_email" id="accountEmail" required></label>
           <select name="account_type" id="account-type">
            <option selected disabled hidden>Select Account Type</option>
            <option value="Client">Client</option>
            <option value="Employee">Employee</option>
            <option value="Admin">Admin</option>
           </select>
           
           <input hidden value="<%= locals.accountData.account_id %>" name="account_id"/>
           <button type="submit">Update Account Permissions</button>
       </fieldset>

  </form>